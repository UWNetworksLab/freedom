{
  "name": "Meta Identity",
  "description": "Aggregates a number of identity providers together.",
  "app": {
    "script": ["identity.js"]
  },
  "dependencies": {
    "loopbackIdentity": {
      "url": "loopback/identity.loopback.json",
      "api": "identity"
    },
    "manualIdentity": {
      "url": "manual/identity.manual.json",
      "api": "identity"
    },
    "xmppIdentity": {
      "url": "xmpp/generic/identity.xmpp.json",
      "api": "identity"
    },
    "googleIdentity": {
      "url": "xmpp/google/identity.google.json",
      "api": "identity"
    },
    "facebookIdentity": {
      "url": "xmpp/facebook/identity.facebook.json",
      "api": "identity"
    }
  },
  "provides": [
    "identity"
  ],
  "permissions": [
    "core.view"
  ]
}
